    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [],
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true
